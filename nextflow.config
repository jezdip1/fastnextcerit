// nextflow.config

// --- Globální Kubernetes nastavení ---
k8s {
  namespace           = 'jezdik-ns'
  runAsUser           = 1000
  computeResourceType = 'Job'
  cpuLimits           = true
  storageClaimName    = 'pvc-seg'
  storageMountPath    = '/mnt/data'
  launchDir           = '/mnt/data/launch'
  workDir             = '/mnt/data/work'
}

// --- Nextflow executor ---
executor {
  queueSize = 30    // maximálně 30 paralelních podů
}

params {
  input_dir = '/mnt/data/input'
  license   = '/mnt/data/license.txt'
}

// --- Výchozí nastavení procesů ---
process {
  executor  = 'k8s'
  container = 'cerit.io/nextflow/nextflow:24.04.4'
  cpus      = 1
  memory    = '12 GB'

  // Speciální profil pro GPU joby
  withLabel: gpujob {
    // vlastní FastSurfer image
    container = 'jezdip1/fastsurfer-cerit:latest'

    // zvýšíme CPU/memory
    cpus   = 2
    memory = '12 GB'

    // tady definujeme, že potřebujeme 1× GPU
    ext.k8s = [
      resources: [
        limits:   [ 'nvidia.com/gpu': '1', cpu: '2', memory: '12Gi' ],
        requests: [ 'nvidia.com/gpu': '1', cpu: '2', memory: '10Gi' ]
      ],
      securityContext: [
        runAsNonRoot:             true,
        runAsUser:                1000,
        allowPrivilegeEscalation: false,
        capabilities: [ drop: ['ALL'] ],
        seccompProfile: [ type: 'RuntimeDefault' ]
      ]
    ]
  }
}
