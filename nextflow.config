// nextflow.config

k8s {
  namespace           = 'jezdik-ns'
  runAsUser           = 1000
  computeResourceType = 'Job'
  cpuLimits           = true
  storageClaimName    = 'pvc-seg'
  storageMountPath    = '/mnt/data'
  launchDir           = '/mnt/data/launch'
  workDir             = '/mnt/data/work'
  // dump every generated Pod spec for inspection
  printPodSpec        = true
}

executor {
  queueSize = 30
}

params {
  input_dir = '/mnt/data/input'
  license   = '/mnt/data/license.txt'
}

process {
  executor  = 'k8s'
  container = 'cerit.io/nextflow/nextflow:24.04.4'
  cpus      = 1
  memory    = '12 GB'

  withLabel: gpujob {
    // switch to our GPU‚Äêenabled FastSurfer image
    container = 'jezdip1/fastsurfer-cerit:latest'
    // bump cpu/mem to match your standalone Job
    cpus      = 2
    memory    = '12 GB'

    // *** Inject the GPU request via raw YAML ***
    clusterOptions = """
spec:
  template:
    spec:
      containers:
      - name: ${task.containerName}
        resources:
          limits:
            nvidia.com/gpu: 1
          requests:
            nvidia.com/gpu: 1
      nodeSelector:
        nvidia.com/gpu.present: "true"
"""
    // keep your securityContext
    ext.k8s.securityContext = [
      runAsNonRoot:             true,
      runAsUser:                1000,
      allowPrivilegeEscalation: false,
      capabilities: [ drop: ['ALL'] ],
      seccompProfile: [ type: 'RuntimeDefault' ]
    ]
  }
}
